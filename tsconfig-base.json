{
	// node 20 settings: https://github.com/tsconfig/bases/blob/main/bases/node20.json
	"compilerOptions": {
		"baseUrl": ".",
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"downlevelIteration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["ES2023"],
		"module": "CommonJS",
		"moduleDetection": "force",
		"moduleResolution": "Node10",
		"outDir": "dist",
		"paths": {
			"*": ["node_modules/*"]
		},
		"rootDir": "src",
		"sourceMap": true,
		"strict": true,
		"target": "ES2022",
		"useUnknownInCatchVariables": true
	},
	"include": ["src"]
}
